<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
      </head>

<body class="container">
    <header>
        <%- include('../partials/header'); %>

    </header>

<main>
    <!-- page to edit post -->
    <h1>Edit Post</h1>
    <form action="/api/update/<%= data.id %>" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Enter title" value="<%= data.title %>">
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea class="form-control" id="content" name="content" rows="20"><%= data.content %></textarea>
        </div>
        <!-- author -->
        <div class="form-group">
            <label for="author">Author</label>
            <input type="text" class="form-control" id="author" name="author" placeholder="Enter author" value="<%= data.author %>">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</main>